{% macro imgCard(coll, item = 'div') %}

<div class="imgcard"><img src="{{item}}.jpg">

  **[{% dataOf coll, item, "title" %}]({{item}}.md)**

  {% dataOf coll, item, "excerpt" %}

</div>
{% endmacro %}


{% macro elemCard(name, icon) %}
{% if not icon %}{% set icon = name %}{% endif %}
<div class="iconcard">
  <a href="{% urlOf collections.Element, name %}"><svg class="icon"><use href="/icons.svg#{{icon}}"></use></svg></a>
  <h3><a href="{% urlOf collections.Element, name %}">{% dataOf collections.Element, name, "title" %}</a> ({{name}})</h3>
  <p>{% dataOf collections.Element, name, "excerpt" %}</p>
</div>
{% endmacro %}



{% macro carousel(images) %}
<style>
u-carousel {
  timeline-scope: --carousel;

  display:block;
  width: 600px;
  height: auto;

  position: relative;
  margin: 1em auto;
  background: white;

  .entries {
    scroll-timeline: --carousel x;

    display: flex;
    width: 100%;
    flex-direction: row;

    overflow-x: scroll;
    scroll-snap-type: x mandatory;
    scrollbar-width: none;
    scroll-behavior: smooth;

    padding: 0;

    > li {
      scroll-snap-align: center;
      flex: 100% 0 0;

      display: grid;
      place-content: center;
    }

    img {
      display: block;
      height: auto;
      width: 600px;
    }
  }
}

</style>


<u-carousel>
  <ul class="entries" tabindex="0">
{% for i in images %}
  <li><img src="{{i.file}}" alt="{{i.text}}" title="" draggable="false"></li>
{% endfor %}
  </ul>
</u-carousel>

{% endmacro %}